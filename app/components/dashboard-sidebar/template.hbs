<div class="sidebar-header">
    {{t 'dashboard.sidebar.providers'}}
</div>
<div class="sidebar-body">
    <ul class="fa-ul provider-list">
        {{#each providers as |provider|}}
            <li class="{{if provider.reviewsWorkflow "moderation-enabled" "moderation-disabled"}}">
                <span class="provider-name">
                    <i class="fa-li fa {{get iconMap provider.preprintWord}}"></i>
                    {{provider.name}}
                </span>
                <ul class="provider-links">
                    {{#if provider.reviewsWorkflow}}
                        <li>{{#link-to 'preprints.provider.moderation' provider}}{{t 'dashboard.sidebar.moderation'}}{{/link-to}}</li>
                        <li>{{#link-to 'preprints.provider.settings' provider}}{{t 'dashboard.sidebar.settings'}}{{/link-to}}</li>
                    {{else}}
                        <li>{{#link-to 'preprints.provider.setup' provider}}{{t 'dashboard.sidebar.set_up'}}{{/link-to}}</li>
                    {{/if}}
                </ul>
            </li>
        {{/each}}
    </ul>
</div>
